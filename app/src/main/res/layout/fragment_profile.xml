<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    >


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pfp"
            app:layout_constraintBottom_toTopOf="@+id/notification_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shapeAppearance="@style/round_img" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="58dp"
            android:fontFamily="@font/poppins_bold"
            android:text="User name" />


        <android.widget.Button
            android:id="@+id/edit_button"
            style="@style/Widget.App.Button"
            android:layout_width="106dp"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="40dp"
            android:text="@string/edit"
            android:textSize="10dp" />
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/background_grey2"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="180 cm"
                        android:textColor="@color/txt_profile"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/height"
                        android:textColor="@color/grey_text"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="60 kg"
                        android:textColor="@color/txt_profile"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/weight"
                        android:textColor="@color/grey_text"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="21 yo"
                        android:textColor="@color/txt_profile"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:fontFamily="@font/poppins"
                        android:text="@string/age"
                        android:textColor="@color/grey_text"
                        android:textSize="15dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Account Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/account_card"
            android:backgroundTint="@color/background_grey2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="237dp">


                <TextView
                    android:id="@+id/account_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="15dp"
                    android:padding="5dp"
                    android:text="@string/account"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="226dp" />

                <TextView
                    android:id="@+id/personal_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/personal_data"
                    android:textSize="17dp"
                    app:drawableEndCompat="@drawable/ic_arrow2"
                    app:drawableStartCompat="@drawable/ic_pf" />

                <TextView
                    android:id="@+id/achievement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/achievement"
                    android:textSize="17dp"
                    app:drawableEndCompat="@drawable/ic_arrow2"
                    app:drawableStartCompat="@drawable/ic_achieve" />

                <TextView
                    android:id="@+id/activity_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/activity_history"
                    android:textSize="17dp"
                    app:drawableEndCompat="@drawable/ic_arrow2"
                    app:drawableStartCompat="@drawable/ic_activity" />

                <TextView
                    android:id="@+id/languages_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/languages_setting"
                    android:textSize="17dp"
                    app:drawableEndCompat="@drawable/ic_lang"
                    app:drawableStartCompat="@drawable/ic_languages" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notification Section -->

        <androidx.cardview.widget.CardView
            android:id="@+id/notification_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/background_grey2"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/notification_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/biometrics"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_biometrics"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/biometrics"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
    android:id="@+id/pop_up_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
    android:textSize="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
