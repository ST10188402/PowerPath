<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PowerPath" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
   <style name="round_img">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
   </style>
    <style name="round_square">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>
    <style name="round_display">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="Theme.PowerPath" parent="Base.Theme.PowerPath" />

    <!-- Custom switch style -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <!-- Theme overlay for the switch -->
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSecondary">@color/button_purple</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/theme_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Take Photo button style -->
    <style name="Widget.App.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="icon">@drawable/ic_camera</item>
        <item name="iconTint">#432A60</item>
        <item name="backgroundTint">@color/button_purple</item>
        <item name="iconGravity">textTop</item>

    </style>
    <!-- Retake button style -->
    <style name="Widget.App.IconButton2" parent="Widget.Material3.Button.IconButton">
        <item name="icon">@drawable/btn_retake</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">24dp</item>
        <item name="android:state_pressed">@drawable/ic_retake_pressed</item>
    </style>
    <!-- Gallery button style -->
    <style name="Widget.App.IconButton3" parent="Widget.Material3.Button.IconButton">
        <item name="icon">@drawable/ic_gallery</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">24dp</item>
    </style>
</resources>